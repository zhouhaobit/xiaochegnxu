<view class="contaner">
	<view class="header">
		<v-epsolid class="epsolid" index="{{classic.index}}" />
		<v-like class="like" bind:like="onLike" like="{{classic.like_status}}" count="{{classic.fav_nums}}" />
	</view>
	<v-movie img="{{classic.image}}" content="{{classic.content}}" />
	<v-navi bind:left="Previous" bind:right="Next" class="navi" first="{{first}}" last ="{{last}}" title="{{classic.title}}" />
</view>